---
layout: 'layouts/default.njk'
eleventyComputed:
  title: '{{ title }} - Equipment'
---

{%- import 'components/heading.njk' as heading %}
{%- import 'components/timeline.njk' as timeline %}

{%- macro list(info='') %}
  <li class="mb-1 py-1 flex">
    <strong class="flex-none">{{ caller() }}</strong>
    <b class="mt-2.5 mx-4 h-px text-black bg-current flex-1 opacity-10" aria-hidden="true"></b>
    <p class="w-full max-w-[50%]">
      {%- if info.monster %}
      {%- for item in info.monster %}
        {% set last = loop.last %}
        {%- for m in collections.monsters_pets %}
        {%- if m.data.title === item %}
        <span class="flex"><i class="fa-light fa-level-up fa-fw fa-rotate-90 mt-[3px] mr-1 opacity-50 flex-none"></i> <a href="/encyclopedias/monsters-pets/{{ m.data.type.toLowerCase() }}/#monster-{{ m.data.page.fileSlug }}"><span class="font-normal">{{ item }}</span></a></span>
        {%- endif %}
        {%- endfor %}
      {%- endfor %}
      {%- elseif info.event %}
      <span class="flex"><i class="fa-light fa-level-up fa-fw fa-rotate-90 mt-[3px] mr-1 opacity-50 flex-none"></i> <a href="/walkthrough/events/{{ info.event | replace("'", "") | slugify }}/"><span class="font-normal">{{ info.event }}</span></a></span>
      {%- elseif info.info %}
      {{ info.info }}
      {%- else %}
      {{ info }}
      {%- endif %}
    </p>
  </li>
{%- endmacro %}


{%- for item in items %}
  <ul class="list-none" id="{{ tags | join }}-{{ item.title | slugify }}">
  {%- call timeline.x(label=item.title,sub=tags,img='/_assets/img/encyclopedias/'+ tags +'/'+ page.fileSlug +'.png',index=loop) %}
    <ul class="equip-stats text-sm">
      {%- call list(info=item.base) %}Material:{%- endcall %}
      {%- call list(info=item.power) %}{%- if (tags | join) == 'weapons' %}Strength:{%- else %}Defense:{%- endif %}{%- endcall %}
      {%- call list(info=item.acquire) %}Aquire:{%- endcall %}
    </ul>
  {%- endcall %}
  </ul>
{%- endfor %}