---
layout: 'layouts/default.njk'
title: Equipment
eleventyNavigation:
  key: Equipment
  title: Equipment
  sub: 'Weapons / Armor'
  img: '/_assets/img/encyclopedias/equipment.png'
  parent: Encyclopedias
  order: 4
---

{%- from 'components/heading.njk' import heading %}

<h2 class="heading">Weapons</h2>

<ul class="my-16 md:(grid-(& cols-2) gap-x-4)">
  {%- for item in collections.weapons %}
  <li class="pb-8">
    {%- call heading(tag='h2',sub='Weapon',url='/encyclopedias/equipment/'+ item.data.page.fileSlug +'/',img='/_assets/img/encyclopedias/weapons/'+ item.data.page.fileSlug +'.png',alt=item.data.title) %}
      {{ item.data.title | replace(' - Equipment', '') }}
    {%- endcall %}
    <ul class="m-0 -mt-2 ml-14 pb-4 pl-1">
      {%- for weapon in item.data.items %}
      <li>
        <a href="/encyclopedias/equipment/{{ item.data.page.fileSlug }}/#weapons-{{ weapon.title | slugify }}" class="font-normal inline-flex items-center hover:(underline)">
          <iconify-icon icon="game-icons:swirl-string" class="iconify mr-2 text-xs opacity-25" noobserver></iconify-icon>
          {{ weapon.title }}
        </a>
      </li>
      {%- endfor %}
    </ul>
  </li>
  {%- endfor %}
</ul>

<h2 class="heading">Armor</h2>

<ul class="mt-16 md:(grid-(& cols-2) gap-x-4)">
  {%- for item in collections.armor %}
  <li class="pb-8">
    {%- call heading(tag='h2',sub='Armor',url='/encyclopedias/equipment/'+ item.data.page.fileSlug +'/',img='/_assets/img/encyclopedias/armor/'+ item.data.page.fileSlug +'.png',alt=item.data.title) %}
      {{ item.data.title | replace(' - Equipment', '') }}
    {%- endcall %}
    <ul class="m-0 -mt-2 ml-14 pb-4 pl-1">
      {%- for armor in item.data.items %}
      <li>
        <a href="/encyclopedias/equipment/{{ item.data.page.fileSlug }}/#armor-{{ armor.title | slugify }}" class="font-normal inline-flex items-center hover:(underline)">
          <iconify-icon icon="game-icons:swirl-string" class="iconify mr-2 text-xs opacity-25" noobserver></iconify-icon>
          {{ armor.title }}
        </a>
      </li>
      {%- endfor %}
    </ul>
  </li>
  {%- endfor %}
</ul>
